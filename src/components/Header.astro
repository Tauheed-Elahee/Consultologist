<header>
	<nav>
		<div class="nav-brand">
			<fluent-anchor href="/" appearance="subtle">
				<span class="brand-text">Consultologist</span>
			</fluent-anchor>
		</div>

		<div class="nav-links">
			<fluent-anchor href="/#home" appearance="subtle" data-scroll-target="#home">Home</fluent-anchor>
			<fluent-anchor href="/#how-it-works" appearance="subtle" data-scroll-target="#how-it-works">How it works</fluent-anchor>
			<fluent-anchor href="/#features" appearance="subtle" data-scroll-target="#features">Features</fluent-anchor>
			<fluent-anchor href="/#pricing" appearance="subtle" data-scroll-target="#pricing">Pricing</fluent-anchor>
			<fluent-anchor href="/#blog" appearance="subtle" data-scroll-target="#blog">Blog</fluent-anchor>
			<fluent-anchor href="https://app.consultologist.ai" appearance="subtle">Sign in</fluent-anchor>
		</div>

		<div class="nav-cta">
			<fluent-button appearance="accent" id="try-button">Try it free</fluent-button>
		</div>

		<fluent-button id="nav-toggle" appearance="subtle" class="mobile-toggle">â˜°</fluent-button>
	</nav>

	<div id="mobile-menu" class="mobile-menu">
		<fluent-anchor href="/#home" appearance="subtle" data-scroll-target="#home">Home</fluent-anchor>
		<fluent-anchor href="/#how-it-works" appearance="subtle" data-scroll-target="#how-it-works">How it works</fluent-anchor>
		<fluent-anchor href="/#features" appearance="subtle" data-scroll-target="#features">Features</fluent-anchor>
		<fluent-anchor href="/#pricing" appearance="subtle" data-scroll-target="#pricing">Pricing</fluent-anchor>
		<fluent-anchor href="/#blog" appearance="subtle" data-scroll-target="#blog">Blog</fluent-anchor>
		<fluent-anchor href="https://app.consultologist.ai" appearance="subtle">Sign in</fluent-anchor>
		<fluent-button appearance="accent" id="mobile-try-button">Try it free</fluent-button>
	</div>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: var(--colorNeutralBackground1);
		box-shadow: var(--shadow4);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: var(--spacingVerticalM) var(--spacingHorizontalXL);
		max-width: 1400px;
		margin: 0 auto;
	}

	.nav-brand {
		flex-shrink: 0;
	}

	.brand-text {
		font-size: 20px;
		font-weight: 600;
		color: var(--colorBrandForeground1);
	}

	.nav-links {
		display: flex;
		gap: var(--spacingHorizontalL);
		align-items: center;
		flex: 1;
		justify-content: center;
	}

	.nav-cta {
		flex-shrink: 0;
	}

	.mobile-toggle {
		display: none;
		font-size: 24px;
	}

	.mobile-menu {
		display: none;
		flex-direction: column;
		padding: var(--spacingVerticalM) var(--spacingHorizontalL);
		gap: var(--spacingVerticalS);
		background: var(--colorNeutralBackground1);
		box-shadow: var(--shadow4);
	}

	.mobile-menu.active {
		display: flex;
	}

	@media (max-width: 1024px) {
		.nav-links {
			gap: var(--spacingHorizontalM);
		}
	}

	@media (max-width: 768px) {
		nav {
			padding: var(--spacingVerticalM) var(--spacingHorizontalL);
		}

		.nav-links,
		.nav-cta {
			display: none;
		}

		.mobile-toggle {
			display: block;
		}
	}
</style>

<script>
	const navToggle = document.getElementById("nav-toggle");
	const mobileMenu = document.getElementById("mobile-menu");
	const tryButton = document.getElementById("try-button");
	const mobileTryButton = document.getElementById("mobile-try-button");

	if (tryButton) {
		tryButton.addEventListener("click", () => {
			window.location.href = "/demo";
		});
	}

	if (mobileTryButton) {
		mobileTryButton.addEventListener("click", () => {
			window.location.href = "/demo";
		});
	}

	if (navToggle && mobileMenu) {
		navToggle.addEventListener("click", () => {
			mobileMenu.classList.toggle("active");
		});

		const mobileLinks = mobileMenu.querySelectorAll("fluent-anchor, fluent-button");
		mobileLinks.forEach((link) => {
			link.addEventListener("click", () => {
				mobileMenu.classList.remove("active");
			});
		});
	}

	document
		.querySelectorAll<HTMLElement>("fluent-anchor[data-scroll-target]")
		.forEach((link) => {
			const targetSelector = link.getAttribute("data-scroll-target");
			if (!targetSelector) {
				return;
			}

			const href = link.getAttribute("href");
			if (!href) return;

			const linkUrl = new URL(href, window.location.origin);
			link.addEventListener("click", (event) => {
				if (linkUrl.pathname !== window.location.pathname) {
					return;
				}

				event.preventDefault();
				const target = document.querySelector(targetSelector);
				if (target) {
					target.scrollIntoView({
						behavior: "smooth",
						block: "start",
					});
				}
			});
		});
</script>
