<header class="microsoft-header" id="site-header">
	<div class="header-bar container">
		<div class="brand">
			<a class="brand-link" href="/" aria-label="Consultologist home">
				<img
					class="brand-logo"
					src="/icon.png"
					alt="Consultologist Logo"
				/>
			</a>
		</div>

		<nav class="desktop-nav" aria-label="Primary navigation">
			<ul>
				<li><a href="/#home" data-scroll-target="#home">Home</a></li>
				<li>
					<a href="/#how-it-works" data-scroll-target="#how-it-works"
						>How it works</a
					>
				</li>
				<li>
					<a href="/#features" data-scroll-target="#features"
						>Features</a
					>
				</li>
				<li>
					<a href="/#pricing" data-scroll-target="#pricing">Pricing</a
					>
				</li>
				<li>
					<a href="/#contact" data-scroll-target="#contact">Contact</a
					>
				</li>
				<li><a href="/#blog" data-scroll-target="#blog">Blog</a></li>
			</ul>
		</nav>

		<div class="header-actions">
			<fluent-button
				appearance="stealth"
				class="icon-button"
				aria-label="Search"
			>
				<span class="icon" aria-hidden="true">
					<svg viewBox="0 0 24 24" role="img" focusable="false">
						<title>Search</title>
						<circle
							cx="11"
							cy="11"
							r="6"
							fill="none"
							stroke="currentColor"
							stroke-width="1.8"></circle>
						<line
							x1="15.5"
							y1="15.5"
							x2="21"
							y2="21"
							stroke="currentColor"
							stroke-width="1.8"
							stroke-linecap="round"></line>
					</svg>
				</span>
			</fluent-button>
			<fluent-anchor
				href="https://app.consultologist.ai"
				appearance="subtle">Sign in</fluent-anchor
			>
			<fluent-button appearance="accent" id="try-button"
				>Try it free</fluent-button
			>
		</div>

		<button
			class="mobile-toggle"
			id="nav-toggle"
			aria-expanded="false"
			aria-controls="mobile-drawer"
		>
			<span class="hamburger" aria-hidden="true"></span>
			<span class="sr-only">Toggle navigation</span>
		</button>
	</div>

	<div class="mobile-drawer" id="mobile-drawer" aria-hidden="true">
		<div class="mobile-drawer__content">
			<nav class="mobile-nav" aria-label="Mobile navigation">
				<a href="/#home" data-scroll-target="#home">Home</a>
				<a href="/#how-it-works" data-scroll-target="#how-it-works"
					>How it works</a
				>
				<a href="/#features" data-scroll-target="#features">Features</a>
				<a href="/#pricing" data-scroll-target="#pricing">Pricing</a>
				<a href="/#contact" data-scroll-target="#contact">Contact</a>
				<a href="/#blog" data-scroll-target="#blog">Blog</a>
			</nav>
			<div class="mobile-actions">
				<fluent-button
					appearance="stealth"
					class="icon-button"
					aria-label="Search"
				>
					<span class="icon" aria-hidden="true">
						<svg viewBox="0 0 24 24" role="img" focusable="false">
							<title>Search</title>
							<circle
								cx="11"
								cy="11"
								r="6"
								fill="none"
								stroke="currentColor"
								stroke-width="1.8"></circle>
							<line
								x1="15.5"
								y1="15.5"
								x2="21"
								y2="21"
								stroke="currentColor"
								stroke-width="1.8"
								stroke-linecap="round"></line>
						</svg>
					</span>
				</fluent-button>
				<fluent-anchor
					href="https://app.consultologist.ai"
					appearance="subtle">Sign in</fluent-anchor
				>
				<fluent-button appearance="accent" id="mobile-try-button"
					>Try it free</fluent-button
				>
			</div>
		</div>
	</div>
</header>

<style>
	.microsoft-header {
		position: sticky;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: var(--neutral-0);
		box-shadow: 0 1px 0 rgba(15, 34, 58, 0.06);
		transition:
			box-shadow 0.3s ease,
			backdrop-filter 0.3s ease;
	}

	.microsoft-header.scrolled {
		box-shadow: 0 2px 12px rgba(15, 34, 58, 0.12);
		backdrop-filter: blur(12px);
	}

	.header-bar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: var(--header-height);
		gap: var(--spacingHorizontalM);
	}

	.brand-link {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: var(--text-strong);
	}

	.brand-mark {
		width: 36px;
		height: 36px;
		border-radius: 8px;
		background: linear-gradient(135deg, #0067b8 0%, #005a9e 100%);
		box-shadow:
			inset 0 0 0 2px rgba(255, 255, 255, 0.7),
			0 6px 16px rgba(0, 103, 184, 0.2);
	}

	.brand-text {
		font-size: 1.125rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.brand-logo {
		width: 48px; /* pick the width you want */
		height: auto; /* keep aspect ratio */
	}

	.desktop-nav ul {
		display: flex;
		align-items: center;
		gap: var(--spacingHorizontalM);
		list-style: none;
	}

	.desktop-nav a {
		position: relative;
		color: var(--text-default);
		font-weight: 500;
		padding: 0.5rem 0;
		transition: color 0.2s ease;
	}

	.desktop-nav a::after {
		content: "";
		position: absolute;
		left: 0;
		bottom: -0.45rem;
		width: 100%;
		height: 2px;
		background: var(--brand-accent);
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.2s ease;
	}

	.desktop-nav a:hover,
	.desktop-nav a:focus {
		color: var(--brand-accent);
	}

	.desktop-nav a:hover::after,
	.desktop-nav a:focus::after,
	.desktop-nav a.active::after {
		transform: scaleX(1);
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: var(--spacingHorizontalS);
	}

	.icon-button::part(control) {
		min-width: auto;
		padding: 0.5rem;
		color: var(--text-default);
	}

	.icon-button::part(control):hover {
		color: var(--brand-accent);
	}

	.icon svg {
		width: 20px;
		height: 20px;
		color: currentColor;
	}

	.mobile-toggle {
		display: none;
		position: relative;
		width: 44px;
		height: 44px;
		border: none;
		background: transparent;
		border-radius: 12px;
		transition: background 0.2s ease;
	}

	.mobile-toggle:focus-visible {
		outline: 3px solid rgba(0, 103, 184, 0.45);
		outline-offset: 2px;
	}

	.mobile-toggle:hover {
		background: rgba(0, 0, 0, 0.05);
	}

	.hamburger,
	.hamburger::before,
	.hamburger::after {
		position: absolute;
		left: 12px;
		right: 12px;
		height: 2px;
		background: var(--text-strong);
		transition:
			transform 0.2s ease,
			opacity 0.2s ease;
	}

	.hamburger {
		top: 50%;
		transform: translateY(-50%);
	}

	.hamburger::before,
	.hamburger::after {
		content: "";
	}

	.hamburger::before {
		top: -8px;
	}

	.hamburger::after {
		bottom: -8px;
	}

	.mobile-toggle[aria-expanded="true"] .hamburger {
		background: transparent;
	}

	.mobile-toggle[aria-expanded="true"] .hamburger::before {
		transform: translateY(8px) rotate(45deg);
	}

	.mobile-toggle[aria-expanded="true"] .hamburger::after {
		transform: translateY(-8px) rotate(-45deg);
	}

	.mobile-drawer {
		position: fixed;
		top: var(--header-height);
		right: 0;
		bottom: 0;
		width: min(320px, 85vw);
		background: var(--neutral-0);
		box-shadow: -12px 0 36px rgba(15, 34, 58, 0.15);
		transform: translateX(100%);
		transition: transform 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.mobile-drawer.open {
		transform: translateX(0);
	}

	.mobile-drawer__content {
		height: 100%;
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalM);
		padding: var(--spacingVerticalL) var(--spacingHorizontalL);
	}

	.mobile-nav {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.mobile-nav a {
		color: var(--text-strong);
		font-weight: 500;
		padding-bottom: 0.25rem;
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
	}

	.mobile-actions {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	@media (max-width: 1024px) {
		.desktop-nav {
			display: none;
		}

		.header-actions {
			display: none;
		}

		.mobile-toggle {
			display: inline-flex;
			align-items: center;
			justify-content: center;
		}
	}
</style>

<script>
	const header = document.getElementById("site-header");
	const tryButton = document.getElementById("try-button");
	const mobileTryButton = document.getElementById("mobile-try-button");
	const navToggle = document.getElementById("nav-toggle");
	const mobileDrawer = document.getElementById("mobile-drawer");
	const scrollLinks = Array.from(
		document.querySelectorAll("[data-scroll-target]"),
	);

	const closeMobileDrawer = () => {
		if (!mobileDrawer || !navToggle) return;
		mobileDrawer.classList.remove("open");
		navToggle.setAttribute("aria-expanded", "false");
		mobileDrawer.setAttribute("aria-hidden", "true");
	};

	const handleScrollState = () => {
		if (!header) return;
		if (window.scrollY > 12) {
			header.classList.add("scrolled");
		} else {
			header.classList.remove("scrolled");
		}
	};

	const scrollToTarget = (selector: string): void => {
		const target = document.querySelector(selector);
		if (!target) return;

		const headerHeight = header?.offsetHeight ?? 0;
		const targetTop =
			target.getBoundingClientRect().top + window.scrollY - headerHeight;

		window.scrollTo({
			top: targetTop,
			behavior: "smooth",
		});
	};

	if (tryButton) {
		tryButton.addEventListener("click", () => {
			window.location.href = "/demo";
		});
	}

	if (mobileTryButton) {
		mobileTryButton.addEventListener("click", () => {
			window.location.href = "/demo";
			closeMobileDrawer();
		});
	}

	if (navToggle && mobileDrawer) {
		navToggle.addEventListener("click", () => {
			const isOpen = navToggle.getAttribute("aria-expanded") === "true";
			if (isOpen) {
				closeMobileDrawer();
			} else {
				mobileDrawer.classList.add("open");
				navToggle.setAttribute("aria-expanded", "true");
				mobileDrawer.setAttribute("aria-hidden", "false");
			}
		});
	}

	scrollLinks.forEach((link) => {
		link.addEventListener("click", (event) => {
			const targetSelector = link.getAttribute("data-scroll-target");
			if (!targetSelector) return;

			const href = link.getAttribute("href");
			if (href) {
				const linkUrl = new URL(href, window.location.origin);
				if (linkUrl.pathname !== window.location.pathname) {
					return;
				}
			}

			event.preventDefault();
			scrollToTarget(targetSelector);
			closeMobileDrawer();
		});
	});

	handleScrollState();
	window.addEventListener("scroll", handleScrollState, { passive: true });
</script>
