<style>
	.site-footer {
		background: #0b1320;
		color: rgba(255, 255, 255, 0.82);
		padding-top: calc(var(--section-padding-desktop) / 2);
		padding-bottom: calc(var(--section-padding-desktop) / 2);
	}

	.footer-top {
		display: grid;
		grid-template-columns: minmax(0, 1.5fr) minmax(0, 2fr);
		gap: var(--spacingHorizontalXL);
		padding-top: calc(var(--section-padding-desktop) / 2);
		padding-bottom: calc(var(--section-padding-desktop) / 2);
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalM);
	}

	.brand-link {
		display: flex;
		align-items: center;
		gap: var(--spacingHorizontalS);
		text-decoration: none;
		color: inherit;
	}

	.brand-mark {
		width: 42px;
		height: 42px;
		border-radius: 10px;
		background: linear-gradient(135deg, #0067b8 0%, #005a9e 100%);
		box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.2), 0 12px 24px rgba(0, 103, 184, 0.3);
	}

	.footer-brand h3 {
		font-size: 1.5rem;
		color: #ffffff;
	}

	.footer-brand p {
		color: rgba(255, 255, 255, 0.65);
		max-width: 320px;
	}

	.footer-social {
		display: flex;
		gap: 0.75rem;
	}

	.footer-social a {
		width: 38px;
		height: 38px;
		border-radius: 10px;
		display: grid;
		place-items: center;
		background: rgba(255, 255, 255, 0.08);
		color: #f5f9ff;
		transition: background 0.2s ease, transform 0.2s ease;
	}

	.footer-social a:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
	}

	.footer-columns {
		display: grid;
		grid-template-columns: repeat(4, minmax(0, 1fr));
		gap: var(--spacingHorizontalL);
	}

	.column-title {
		display: block;
		font-weight: 600;
		margin-bottom: var(--spacingVerticalS);
		color: rgba(255, 255, 255, 0.9);
	}

	.footer-columns ul {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 0.65rem;
		padding: 0;
		margin: 0;
	}

	.footer-columns a {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer-columns a:hover {
		color: #ffffff;
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: var(--spacingHorizontalM);
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		padding-top: var(--spacingVerticalM);
		padding-bottom: var(--spacingVerticalS);
	}

	.footer-links {
		display: flex;
		gap: var(--spacingHorizontalS);
	}

	.footer-links a {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
	}

	.footer-links a:hover {
		color: #ffffff;
	}

	@media (max-width: 1024px) {
		.footer-top {
			grid-template-columns: 1fr;
		}

		.footer-columns {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}
	}

	@media (max-width: 640px) {
		.footer-columns {
			grid-template-columns: 1fr;
		}

		.footer-bottom {
			flex-direction: column;
			align-items: flex-start;
		}

		.footer-links {
			flex-wrap: wrap;
		}
	}
</style>
