<style>
	footer {
		background: var(--colorNeutralBackground2);
		color: var(--colorNeutralForeground1);
		padding: calc(var(--spacingVerticalXXXL) * 2) 0
			var(--spacingVerticalXXL);
		border-top: 1px solid var(--colorNeutralStroke2);
	}

	.footer-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 var(--spacingHorizontalXXL);
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1fr;
		gap: calc(var(--spacingHorizontalXXXL) * 2);
		margin-bottom: calc(var(--spacingVerticalXXXL) * 1.5);
	}

	.footer-column {
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalL);
	}

	.footer-heading {
		font-size: var(--fontSizeBase600);
		font-weight: var(--fontWeightSemibold);
		color: var(--colorNeutralForeground1);
		margin: 0;
	}

	.footer-description {
		font-size: var(--fontSizeBase400);
		color: var(--colorNeutralForeground2);
		line-height: 1.6;
		margin: 0;
		max-width: 300px;
	}

	.footer-title {
		font-size: var(--fontSizeBase400);
		font-weight: var(--fontWeightSemibold);
		color: var(--colorNeutralForeground1);
		margin: 0;
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalM);
	}

	.footer-nav fluent-anchor {
		font-size: var(--fontSizeBase400);
		color: var(--colorNeutralForeground2);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer-nav fluent-anchor:hover {
		color: var(--colorBrandForeground1);
	}

	fluent-divider {
		margin: 0 0 var(--spacingVerticalXL);
	}

	.footer-bottom {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.copyright {
		font-size: var(--fontSizeBase300);
		color: var(--colorNeutralForeground3);
		margin: 0;
	}

	@media (max-width: 1024px) {
		.footer-container {
			padding: 0 var(--spacingHorizontalXL);
		}

		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: calc(var(--spacingHorizontalXXL) * 1.5);
		}

		.footer-column:first-child {
			grid-column: 1 / -1;
		}
	}

	@media (max-width: 768px) {
		footer {
			padding: calc(var(--spacingVerticalXXXL) * 1.5) 0
				var(--spacingVerticalXL);
		}

		.footer-container {
			padding: 0 var(--spacingHorizontalL);
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: var(--spacingVerticalXXL);
		}

		.footer-column:first-child {
			grid-column: 1;
		}

		.footer-description {
			max-width: 100%;
		}

		.footer-bottom {
			text-align: center;
		}
	}
</style>
