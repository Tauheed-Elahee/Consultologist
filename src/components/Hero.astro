<section id="home" class="hero-section hero-gradient" data-background="light">
	<div class="container hero-layout">
		<div class="hero-content">
			<span class="section-eyebrow">Intelligent consult automation</span>
			<h1>Consultologist: <br />A physician specializing in consults</h1>
			<p class="hero-subheading">
				You handle your speciality, we handle ours
			</p>
			<div class="hero-actions">
				<fluent-button appearance="accent" href="/demo"
					>Start free trial</fluent-button
				>
				<fluent-button
					appearance="outline"
					data-scroll-target="#pricing"
					href="/#pricing">View pricing</fluent-button
				>
			</div>
			<div class="hero-metrics">
				<div>
					<span class="metric-value">4+ hours</span>
					<span class="metric-label">saved every week</span>
				</div>
				<div>
					<span class="metric-value">100%</span>
					<span class="metric-label">privacy compliant</span>
				</div>
				<div>
					<span class="metric-value">24/7</span>
					<span class="metric-label">clinical-ready drafts</span>
				</div>
			</div>
		</div>
		<div class="hero-visual" role="presentation" aria-hidden="true">
			<div class="floating-card">
				<h4>Consult preview</h4>
				<ul>
					<li>
						<span class="item-label">Referral summary</span>
						<span class="item-value">AI curated insights</span>
					</li>
					<li>
						<span class="item-label">Patient questionnaire</span>
						<span class="item-value">Automatically mapped</span>
					</li>
					<li>
						<span class="item-label">Consult draft</span>
						<span class="item-value highlight">50% complete</span>
					</li>
				</ul>
			</div>
			<div class="orb orb-one"></div>
			<div class="orb orb-two"></div>
		</div>
	</div>
</section>

<style>
	.hero-section {
		position: relative;
		overflow: hidden;
		padding-top: calc(var(--section-padding-desktop) * 0.85);
		padding-bottom: calc(var(--section-padding-desktop) * 0.85);
		min-height: clamp(560px, 82vh, 720px);
	}

	.hero-layout {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: var(--spacingHorizontalXXL);
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalM);
		max-width: 640px;
	}

	.hero-subheading {
		font-size: 1.125rem;
		line-height: 1.75;
		color: var(--text-muted);
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacingHorizontalS);
	}

	.hero-metrics {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: var(--spacingHorizontalM);
		padding-top: var(--spacingVerticalM);
		border-top: 1px solid rgba(0, 0, 0, 0.08);
	}

	.hero-metrics > div {
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
	}

	.metric-value {
		font-family: var(--fontFamilyStrong);
		font-size: 1.35rem;
		font-weight: 600;
		color: var(--text-strong);
	}

	.metric-label {
		font-size: 0.95rem;
		color: var(--text-muted);
	}

	.hero-visual {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.floating-card {
		position: relative;
		z-index: 2;
		border-radius: 20px;
		padding: var(--spacingVerticalL) var(--spacingHorizontalL);
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(14px);
		box-shadow: 0 30px 60px rgba(0, 46, 102, 0.18);
		width: min(360px, 100%);
		display: flex;
		flex-direction: column;
		gap: var(--spacingVerticalM);
	}

	.floating-card h4 {
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--brand-accent);
	}

	.floating-card ul {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.floating-card li {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.item-label {
		font-size: 0.95rem;
		color: var(--text-muted);
	}

	.item-value {
		font-size: 0.95rem;
		font-weight: 600;
		color: var(--text-strong);
	}

	.highlight {
		color: var(--brand-accent);
	}

	.orb {
		position: absolute;
		border-radius: 50%;
		filter: blur(0px);
		z-index: 1;
	}

	.orb-one {
		width: 320px;
		height: 320px;
		background: radial-gradient(
			circle at 30% 30%,
			rgba(0, 103, 184, 0.35),
			rgba(0, 103, 184, 0)
		);
		right: 18%;
		bottom: 4%;
	}

	.orb-two {
		width: 220px;
		height: 220px;
		background: radial-gradient(
			circle at 40% 40%,
			rgba(255, 170, 219, 0.4),
			rgba(255, 170, 219, 0)
		);
		right: 0;
		top: 18%;
	}

	@media (max-width: 1024px) {
		.hero-layout {
			grid-template-columns: 1fr;
			gap: var(--spacingVerticalXL);
		}

		.hero-content {
			text-align: center;
			margin: 0 auto;
			align-items: center;
		}

		.hero-actions {
			justify-content: center;
		}

		.hero-metrics {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}

		.hero-visual {
			order: -1;
		}
	}

	@media (max-width: 768px) {
		.hero-section {
			padding-top: var(--section-padding-mobile);
			padding-bottom: var(--section-padding-mobile);
			min-height: auto;
		}

		.hero-metrics {
			grid-template-columns: repeat(2, minmax(0, 1fr));
			row-gap: 1.5rem;
		}

		.orb-one,
		.orb-two {
			display: none;
		}
	}

	@media (max-width: 520px) {
		.hero-metrics {
			grid-template-columns: 1fr;
		}

		.floating-card {
			padding: var(--spacingVerticalM) var(--spacingHorizontalM);
		}
	}
</style>
