---
// Contact section matching cleverconsult.ai style
---

<section id="contact" class="contact">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Ready to Transform Your Practice?</h2>
      <p class="section-subtitle">
        Checkout how Consultologist AI can make consults for you.
      </p>
  </div>
    
  <div class="container" style="text-align: center;">
    <div class="input-container">
      <textarea id="comments" name="comments" rows="6" placeholder="Enter your consultation details here..." class="consultation-textarea"></textarea>
    </div>

    <div class="button-container">
      <button type="button" id="consultologist-send" class="consultation-button">Send to Consultologist</button>
    </div>

    <div class="response-container" id="consultologist-response">
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 6rem 2rem;
    background: white;
    color: #1a1a1a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .input-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .text-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 50px;
    font-size: 1rem;
    background: white;
    color: #1f2937;
    transition: all 0.3s ease;
  }

  .text-input:focus {
    outline: none;
    border-color: #0d9488;
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
  }

  .text-input::placeholder {
    color: #9ca3af;
  }

  .input-button {
    padding: 1rem 2rem;
    background: #0d9488;
    color: white;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .input-button:hover {
    background: #0f766e;
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(13, 148, 136, 0.3);
  }

  .input-container {
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .consultation-textarea {
    width: 100%;
    padding: 1.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 16px;
    font-size: 1rem;
    font-family: inherit;
    background: white;
    color: #1f2937;
    transition: all 0.3s ease;
    resize: vertical;
    min-height: 120px;
    box-sizing: border-box;
  }

  .consultation-textarea:focus {
    outline: none;
    border-color: #0d9488;
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
  }

  .consultation-textarea::placeholder {
    color: #9ca3af;
  }

  .button-container {
    text-align: center;
    margin-bottom: 2rem;
  }

  .consultation-button {
    padding: 1.2rem 2.5rem;
    background: #0d9488;
    color: white;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(13, 148, 136, 0.3);
  }

  .consultation-button:hover {
    background: #0f766e;
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(13, 148, 136, 0.4);
  }

  .response-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 16px;
    border: 1px solid #e5e7eb;
    min-height: 100px;
    text-align: left;
    color: #1f2937;
    line-height: 1.6;
    font-size: 1rem;
  }

  .loading-message {
    text-align: center;
    padding: 2rem;
    color: #6b7280;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #e5e7eb;
    border-top: 4px solid #0d9488;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .error-message {
    background: #fef2f2;
    border: 1px solid #f87171;
    border-radius: 12px;
    padding: 1.5rem;
    color: #dc2626;
    text-align: center;
  }

  .error-message h3 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
  }

  .error-message p {
    margin: 0.5rem 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-info h3 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1.5rem;
  }

  .contact-info p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #4b5563;
    margin-bottom: 2.5rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .contact-method {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .method-icon {
    font-size: 1.5rem;
    background: #f0f9ff;
    padding: 1rem;
    border-radius: 12px;
    color: #0066cc;
  }

  .method-content h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .method-content p {
    color: #6b7280;
    margin: 0;
  }

  .consultation-note {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    background: #f0f9ff;
    padding: 1.5rem;
    border-radius: 12px;
    border-left: 4px solid #0066cc;
  }

  .note-icon {
    font-size: 1.5rem;
    color: #0066cc;
  }

  .note-content h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .note-content p {
    color: #4b5563;
    margin: 0;
    font-size: 0.95rem;
  }

  .contact-form-container {
    background: #f8fafc;
    border-radius: 20px;
    padding: 2.5rem;
    border: 1px solid #e5e7eb;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 12px;
    background: white;
    color: #1a1a1a;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #9ca3af;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #0066cc;
    box-shadow: 0 0 0 3px rgba(0, 102, 204, 0.1);
  }

  .submit-btn {
    padding: 1rem 2rem;
    background: #0066cc;
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 102, 204, 0.3);
  }

  .submit-btn:hover {
    background: #0052a3;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.4);
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .contact {
      padding: 4rem 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1.1rem;
    }

    .input-container {
      flex-direction: column;
      gap: 1rem;
    }

    .text-input {
      width: 100%;
    }

    .input-button {
      width: 100%;
    }

    .input-container {
      margin-bottom: 1.5rem;
    }

    .consultation-textarea {
      padding: 1.25rem;
      font-size: 0.95rem;
    }

    .consultation-button {
      padding: 1rem 2rem;
      font-size: 1rem;
      width: 100%;
    }

    .response-container {
      padding: 1.25rem;
      font-size: 0.95rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-form-container {
      padding: 2rem;
    }

    .contact-method {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .consultation-note {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
</style>

<script>
  // Handle Consultologist submission
  const consultologistButton = document.getElementById('consultologist-send') as HTMLButtonElement;
  const consultationTextarea = document.getElementById('comments') as HTMLTextAreaElement;
  const responseContainer = document.getElementById('consultologist-response') as HTMLElement;

  if (consultologistButton && consultationTextarea && responseContainer) {
    consultologistButton.addEventListener('click', async function() {
      const prompt = consultationTextarea.value.trim();
      
      if (!prompt) {
        responseContainer.innerHTML = `
          <div class="error-message">
            <p>Please enter consultation details before sending.</p>
          </div>
        `;
        return;
      }

      // Update button state
      const originalText = consultologistButton.textContent;
      consultologistButton.textContent = 'Processing...';
      consultologistButton.disabled = true;
      
      // Show loading state
      responseContainer.innerHTML = `
        <div class="loading-message">
          <div class="loading-spinner"></div>
          <p>Consultologist is analyzing your input and generating a consultation note...</p>
        </div>
      `;

      console.log("Going into Try Catch statement")

      try {
        const response = await fetch('/api/chat', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ prompt })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const html = await response.text();
        responseContainer.innerHTML = html;

      } catch (error) {
        console.error('Error calling Consultologist API:', error);
        responseContainer.innerHTML = `
          <div class="error-message">
            <h3>⚠️ Error</h3>
            <p>Sorry, there was an error processing your request. Please check your API key configuration and try again.</p>
          </div>
        `;
      } finally {
        // Reset button state
        consultologistButton.textContent = originalText;
        consultologistButton.disabled = false;
      }
    });
  }
</script>