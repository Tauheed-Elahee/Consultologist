<style>
  .services {
    padding: 6rem 2rem;
    background: #f8fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .features-badge {
    display: inline-block;
    background: #a7f3d0;
    color: #065f46;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .section-main-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
    line-height: 1.2;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .service-card {
    text-align: center;
    padding: 2rem 1rem;
  }

  .service-icon {
    width: 80px;
    height: 80px;
    background: #0d9488;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 2rem;
    color: white;
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .service-card p {
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
    font-size: 1rem;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .services {
      padding: 4rem 1rem;
    }

    .section-main-title {
      font-size: 2rem;
    }

    .section-title {
      font-size: 1.25rem;
    }

    .section-header {
      margin-bottom: 3rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .service-card {
      padding: 1.5rem 1rem;
    }
  }
</style>