---
import Header from "../components/Header.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import "../styles/theme.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#0067B8" />
		<meta
			name="description"
			content="Explore Consultologist's Microsoft-inspired demo experience featuring Fluent UI components, Segoe UI typography, and AI consult automation."
		/>
		<meta property="og:title" content="Consultologist Demo" />
		<meta property="og:description" content="See how Consultologist automates specialist consults with Microsoft-grade design and AI." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://consultologist.ai/demo" />
		<meta property="og:image" content="/image.png" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Consultologist Demo" />
		<meta name="twitter:description" content="Experience Microsoft-style AI consult workflows in the Consultologist demo." />
		<meta name="twitter:image" content="/image.png" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Consultologist - AI-Powered Business Consulting Solutions</title>
		<script src="../fluentui-setup.ts"></script>
	</head>
	<body>
		<Header />
		<main>
			<Contact />
		</main>
		<Footer />
	</body>
</html>
